@model InteractiveLearningSystem.Models.Group
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="well text-center">
		<h2>Group Details</h2>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		@Html.Action("UserSnippetPartial", "UsersPartial", new { area = "Common", userId = Model.Teacher.Id })
		@Html.Action("SchoolSnippetPartial", "SchoolsPartial", new { area = "Common", schoolId = Model.SchoolId })
	</div>
	<div class="col-md-offset-1 col-md-8 well">
		<div class="col-md-12">
			@Html.Action("GroupSnippetPartial", "GroupsPartial", new { area = "Common", groupId = Model.Id })
		</div>
	</div>
</div>
<div class="row">
</div>


