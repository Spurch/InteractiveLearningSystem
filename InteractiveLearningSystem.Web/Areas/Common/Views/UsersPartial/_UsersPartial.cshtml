@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
	<span class="glyphicon glyphicon-user"></span>
	@switch (@ViewData["Role"].ToString()) {
		case "Administrator":
			<span>Manage Users</span>
			break;
		case "Moderator":
			<span>Manage School</span>
			break;
		case "Adviser":
			<span>Manage People</span>
			break;
		case "Teacher":
			<span>Manage Groups</span>
			break;
	}
			
	<span class="caret"></span>
</a>
<ul class="dropdown-menu">
    @foreach (var item in Model)
		{
		<li><a href="@Url.Action("Index", "User", new { area="Common", role=item.Name})">@string.Concat(item.Name, "s")</a></li>
	}
	@if (Model.Any(x => x.Name == "Moderator" || x.Name == "Adviser"))
	{
		<li class="divider" role="separator"></li>
		<li><a href="@Url.Action("Add", "User", new { area="Common"})"><span class="glyphicon glyphicon-plus"></span> Add User</a></li>
    }
</ul>