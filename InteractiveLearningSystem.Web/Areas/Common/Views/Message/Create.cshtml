@model InteractiveLearningSystem.Web.Areas.Common.Models.MessageCreateViewModel
@{
	ViewBag.Title = "New message";
}

<div class="row well text-center">
	<h2>Create new message</h2>
</div>
@using (@Ajax.BeginForm("Create", "Message", new AjaxOptions { HttpMethod = "Post" }))
{

	@Html.AntiForgeryToken()
	<div class="row">
		<div class="col-md-8">
			<div class="form-group">
				<div>
					@Html.LabelFor(model => model.Title)
				</div>
				<div>
					@Html.TextBoxFor(model => model.Title, new { id = "message-title", style = "width: 50em;" })
				</div>
			</div>
			<div class="form-group">
				<div>
					@Html.LabelFor(model => model.Content)
				</div>
				<div>
					@Html.TextAreaFor(model => model.Content, new { id = "message-content", @class = "text-box-custom" })
				</div>
			</div>
			<div class="form-group">
				<div>
					@Html.LabelFor(model => model.Notes)
				</div>
				<div>
					@Html.TextAreaFor(model => model.Notes, new { id = "message-notes", @class = "text-box-custom" })
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<div>
					@Html.LabelFor(model => model.ReceiverEmail)
				</div>
				<div>
					@Html.TextBoxFor(model => model.ReceiverEmail)
				</div>
			</div>
			<div class="form-group">
				<div>
					@Html.LabelFor(model => model.Flag)
				</div>
				<div>
					@Html.TextBoxFor(model => model.Flag)
				</div>
			</div>
			<br />
			<div class="container">
				<!-- Trigger the modal with a button -->
				<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Sent message</button>

				<!-- Modal -->
				<div class="modal fade" id="myModal" role="dialog">
					<div class="modal-dialog">

						<!-- Modal content-->
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
								<h4 class="modal-title">Message confirmation</h4>
							</div>
							<div class="modal-body">
								<p>Send message to user?</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-success" onclick="updateUserNotes()" data-dismiss="modal">Sent</button>
								<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
							</div>
						</div>

					</div>
				</div>

			</div>
		</div>
	</div>

}

